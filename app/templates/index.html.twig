<!doctype html>
<html class="h-100">
    <head>
        <meta charset="utf-8">
        <meta name="robots" content="noindex">
        <meta name="googlebot" content="noindex">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="shortcut icon" href="/favicon.png">
        {% block styles %}
            <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.css" integrity="sha256-Nfu23DiRqsrx/6B6vsI0T9vEVKq1M6KgO8+TV363g3s=" crossorigin="anonymous">
            <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
            <link rel="stylesheet" href="/assets/styles.css">
        {% endblock %}
        <title>Hello, world!</title>
    </head>
    <body class="d-flex flex-column h-100">
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-4">
            {% if logo %}
                <a class="navbar-brand" href="#">
                    <img src="{{ logo }}" height="32" alt="">
                </a>
            {% endif %}
            <div class="navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item{% if app.request.attributes.get('_route') == 'app_form_encrypt' %} active{% endif %}">
                        <a href="{{ path('app_form_encrypt') }}" class="nav-link" rel="nofollow">
                            <em class="fas fa-lock"></em>
                            Encrypt
                        </a>
                    </li>
                    <li class="nav-item{% if app.request.attributes.get('_route') == 'app_form_decrypt' or app.request.attributes.get('_route') == 'app_encrypted' or app.request.attributes.get('_route') == 'app_encrypted_hash' %} active{% endif %}">
                        <a href="{{ path('app_form_decrypt') }}" class="nav-link" rel="nofollow">
                            <em class="fas fa-unlock"></em>
                            Decrypt
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="https://github.com/Flower7C3/php-cryptor-form" class="nav-link">
                            <em class="fab fa-github"></em>
                            <span class="d-lg-none d-md-none d-sm-none">
                                Source code
                                <small class="fas fa-external-link-alt"></small>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <main role="main" class="flex-shrink-0">
            <div class="container">
                {% block container %}
                {% endblock %}
            </div>
        </main>
        <footer class="footer mt-auto py-3">
            <div class="container">
                <small class="text-muted">
                    &copy; <a href="https://Kwiatek.pro">Kwiatek.pro</a>
                </small>
            </div>
        </footer>
        {% block scripts %}
            <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.slim.min.js" integrity="sha256-3edrmyuQ0w65f8gfBsqowzjJe2iM6n0nKciPUp8y+7E=" crossorigin="anonymous"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha256-CjSoeELFOcH0/uxWu6mC/Vlrc1AARqbm/jiiImDGV3s=" crossorigin="anonymous"></script>
            <script src="/assets/scripts.js"></script>
        {% endblock %}
    </body>
</html>
