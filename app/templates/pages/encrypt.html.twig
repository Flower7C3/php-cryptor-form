{% extends '@app/pages/form.html.twig' %}
{% import "@app/meta/forms.html.twig" as forms %}

{% block secret_second_input %}
    <input type="password" name="secret2" class="form-field-secret form-control form-control-lg{% if form.errors.secret %} is-invalid{% endif %} js-tooltip" value="{{ form.data.secret2 }}" placeholder="Repeat secret key" data-toggle="tooltip" data-placement="top" title="Your secret key (repeat)"/>
{% endblock %}

{% block input_row %}
    <div class="input-group-prepend">
        <span class="input-group-text">
            <em class="far fa-fw fa-comment-alt" style="align-self:self-start;margin-top:9px;"></em>
        </span>
    </div>
    <textarea rows="1" name="decrypted" class="form-field-decrypted form-control form-control-lg{% if form.errors.decrypted %} is-invalid{% endif %} js-tooltip" style="resize:none" placeholder="Plain text string to encode" data-toggle="tooltip" data-placement="top" title="Plain text string to encode">
        {{- form.data.decrypted -}}
    </textarea>
    {{ forms.error(form, 'decrypted') }}
{% endblock %}


 {% block scripts %}
     {{ parent() }}
     <script>
         var textarea = document.getElementById("decrypted");
         var limit = 180;
         textarea.oninput = function () {
             textarea.style.height = "";
             console.log(textarea.scrollHeight)
             textarea.style.height = Math.min(textarea.scrollHeight, limit) + "px";
         };
     </script>
 {% endblock %}
